  "update_rules": {
    "conservative_mode": true,
    "require_high_confidence": true,
    "max_changes_per_file": 3,
    "require_source_citation": true,
    "auto_version_bump": true,
    "changelog_required": true
  },

  "excluded_files": [
    "LICENSE",
    "CONTRIBUTING.md",
    ".gitignore",
    "scripts/*.py",
    "config/*.json"
  ],

  "impact_thresholds": {
    "high": {
      "description": "Major updates that affect core functionality",
      "examples": ["new model release", "breaking API change", "major price change"],
      "action": "update"
    },
    "medium": {
      "description": "Significant updates worth documenting",
      "examples": ["new feature", "performance improvement", "minor price adjustment"],
      "action": "consider"
    },
    "low": {
      "description": "Minor updates that may not need documentation",
      "examples": ["bug fix", "documentation update", "minor enhancement"],
      "action": "skip"
    }
  }
